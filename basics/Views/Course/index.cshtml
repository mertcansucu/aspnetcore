@model Course

<!--
    burdaki oluşturduklarımı bootstrap içinde daha düzgün bir şekilde getirdim
    <h1>course index page</h1>
<p>
    @Model.Id 
    modelde oluşturduğum veritabanını coursecontroller içinde bıraya dinamik veri yollayıp burda ekrana yazdırdım
</p>
<p>
    @Model.Title
</p>
<p>
    @Model.Description
</p>
-->

<!--CourseList deki oluşturduğum card yapısını alıp kullandım-->
<div class="card mb-3" id="@Model.Id">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Image" class="img-fluid rounded-start" alt="">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>